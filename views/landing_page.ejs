    <body style="background-image: url('<%= background_image %>')">
    
    <div class ="main">
        <div class="welcome">
            <div class="profile-image">
                <img src="<%= user_image %>">
            </div>
            <div class="welcomeback">
                <h1><i><b>Welcome back, <%= titlelizedFirstName  %> <%= titlelizedLastName  %>!</b></i></h1>
                <% if(favSeason == "Spring") { %>
                <h1><i>Which tasks have you completed today?</i></h1>
                <% } %>
                <% if(favSeason == "Summer") { %>
                <h1><i>Which tasks have you completed today?</i></h1>
                <% } %>
                <% if(favSeason == "Winter") { %>
                <h1><i>Which tasks have you completed today?</i></h1>
                <% } %>
                <% if(favSeason == "Fall") { %>
                <h1><i>Which tasks have you completed today?</i></h1>
                <% } %>
            </div>

            <div class="card self-card">
                <div class="card-title">
                    <text>Reminders List</text>
                </div>
                <ul class="list-group">
                    <% remindersList.forEach((item) => { %>
                        <% if (item.length !== 0) { %> <!-- ignore empty string entries -->
                        <li class="list-group-item"><%= item %></li>
                        <% } %>
                    <% }) %>
                </ul>
                
